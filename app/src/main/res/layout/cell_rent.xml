<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"

    app:cardCornerRadius="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_homeImage"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:elevation="5dp"
            android:outlineSpotShadowColor="@color/black"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/cat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/iv_homeImage"
            android:ellipsize="end"
            android:fontFamily="@font/bubblegum_sans"
            android:maxLines="5"
            android:text="Category : "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/category_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cat_tv"
            android:ellipsize="end"
            android:fontFamily="@font/bubblegum_sans"
            android:maxLines="5"
            android:text="pg"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/sp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cat_tv"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/iv_homeImage"
            android:ellipsize="end"
            android:fontFamily="@font/bubblegum_sans"
            android:maxLines="5"
            android:text="Price : "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/sellingprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_tv"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/sp_tv"
            android:ellipsize="end"
            android:fontFamily="@font/bubblegum_sans"
            android:maxLines="5"
            android:text="1500"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sellingprice"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/iv_homeImage"
            android:ellipsize="end"
            android:fontFamily="@font/bubblegum_sans"
            android:maxLines="5"
            android:text="Address : "
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sellingprice"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/add_tv"
            android:ellipsize="end"
            android:fontFamily="@font/bubblegum_sans"
            android:maxLines="5"
            android:text="plot A46"
            android:textColor="@color/black" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>